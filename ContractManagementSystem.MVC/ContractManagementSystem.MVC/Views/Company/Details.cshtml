@model ContractManagementSystem.BusinessLogic.ViewModel.CompanyVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
<div class="card mb-3">
    <div class="card-header"> 
        <div class="row">
            <div class="col-md-6"> <i class="fa fa-info-circle"></i> Company Details</div>

            <div class="col-md-6">
                <a href="@Url.Action("Edit", new {id=Model.ID })" class="btn btn-info  ">Edit</a>
                @Html.ActionLink("back", "Index", null, new { @class = "btn btn-secondary " })
            </div>
        </div>
       
        
        
    </div>
    <div>
        <div class="card-body">          
            
            <div class="form">
                <div class="form-group row">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = " col-md-3 col-form-label  " })
                    <div class="col-md-9 ">
                        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                       
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.CompanyABN_CAN, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.CompanyABN_CAN, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.URL, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Description, new { @class = "col-md-3 col-form-label" })
                    <div class="col-md-9">
                        @Html.DisplayFor(model => model.Description, new { @class = "form-control" })
                    </div>
                </div>
               
            </div>
  

        </div>
    </div>
</div>
 
@model ContractManagementSystem.BusinessLogic.ViewModel.ContactVM

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="mx-auto col-sm-8">
        <!-- form user info -->
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">UpdateContact</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Contact", new { @class = "form" }))
    {
                    @Html.HiddenFor(x=>x.ID)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.TitleId, "TitleId", htmlAttributes: new { @class = " col-md-3 col-form-label  " })
                <div class="col-md-9 ">
                    @Html.DropDownList("TitleId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TitleId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = " col-md-3 col-form-label  " })
                <div class="col-md-9 ">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = " col-md-3 col-form-label  " })
                <div class="col-md-9 ">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ContractType, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.ContractType, EnumHelper.GetSelectList(typeof(ContractManagementSystem.BusinessLogic.Enum.ContractType)),
    "Select Contract Type",
    new { @class = "form-control mb-2 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.ContractType, "", new { @class = "text-danger" })
                </div>
            </div> <div class="form-group row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Department, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.PhoneNo, htmlAttributes: new { @class = "col-md-3 col-form-label" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.CompanyId, "CompanyId", htmlAttributes: new { @class = " col-md-3 col-form-label  " })
                <div class="col-md-9 ">
                    @Html.DropDownList("CompanyId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CompanyId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-3 col-form-label form-control-label"></label>
                <div class="col-md-9">
                    @Html.ActionLink("cancel", "Index", null, new { @class = "btn btn-secondary" })
                    <input type="submit" class="btn btn-primary" value="Save Changes">
                </div>
            </div>

}

            </div>
        </div>
        <!-- /form user info -->
    </div>
</div>


<script src="~/Scripts/jquery.validate.min.js"></script>
